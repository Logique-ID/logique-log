{
  "compilerOptions": {
    /* Target environment Node.js modern */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    /* Interop & strictness */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,

    /* Node.js type declarations */
    "types": ["node"],

    /* Output dir */
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
